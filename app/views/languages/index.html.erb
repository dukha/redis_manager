<p class="pageheading"><%=t("headings.listing.heading", :model=>t($ARM + "language.other") )%></p>
<% if Language.count==0 then %>
  <%=t($MS + "no_records_found")%><br/>
<%  else %>
<%= twill_paginate %>
<table class="data">
  <tr class="dataheader">
    <th class ="dataheader"><%=t($FL+"iso_code")%></th>
    <th class ="dataheader"><%=t($FL+"name")%></th>
    
    <th class="linkheader"></th>
    <th class="linkheader"></th>
 </tr>

<% cell_class = "data" %>
<% link_cell_class="link"%>
  
<% @languages.each do |language| %>

  <tr class = "<%= cycle('dataeven', 'dataodd') %>" >
    <td class="<%= cell_class %>"><%= language.iso_code %></td>
    <td class="<%= cell_class %>"><%= language.name %></td>
    
    <td class="<%= link_cell_class %>"><%= link_to t('actions.edit'), edit_language_path(language) %></td>
    <td class="<%= link_cell_class %>"><%= link_to t('actions.destroy'), language, :confirm => t('messages.delete.are_you_sure', :model => t($ARM + 'language.one')), :method => :delete %></td>
  </tr>
	
<% end %>
</table>
<%= twill_paginate %>
<br />
<% end %>
<%= link_to t('headings.new.heading', :model=> t($ARM + 'language.one')), new_language_path %>
