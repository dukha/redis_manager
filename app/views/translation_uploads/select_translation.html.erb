<p class="pageheading"><%=t("headings.edit.heading", :model=>t($ARM + "translation", :count=>1) )%></p>


<%= semantic_form_for [@translation_upload], :url => { :action => to_redis_path(params[:id]), :controller => "translation_uploads"  } do |f| %>
  <%=semantic_fields_for :translation do %>>
    <% t.inputs do %>
      <%= t.input :id, :as=>:select,:collection=> Translation.all.collect {|t| [ t.name, t.id ]} %>
    <% end %>
  <%end%>
  <%= f.buttons do %>
      <%= f.commit_button  :select%>
  <% end %>
 <%end%>
          

